<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="me.eranik.handler.MainHandler"
          alignment="CENTER" hgap="2" vgap="2">

    <padding>
        <Insets top="35" right="25" bottom="25" left="25"/>
    </padding>

    <TableView fx:id="tableView" GridPane.rowIndex="0" GridPane.columnIndex="0" onMouseClicked="#handleMouseClick"
               minWidth="450" minHeight="450" GridPane.columnSpan="3">
        <columns>
            <TableColumn text="Name" minWidth="380" maxWidth="380">
                <cellValueFactory>
                    <PropertyValueFactory property="name"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Type" minWidth="70" maxWidth="70">
                <cellValueFactory>
                    <PropertyValueFactory property="type"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Button fx:id="button" GridPane.rowIndex="2" GridPane.columnIndex="0" onMouseClicked="#handleButtonClick"
            text="Download to:">
    </Button>

    <TextField fx:id="textField" GridPane.rowIndex="2" GridPane.columnIndex="1" minWidth="250" maxWidth="250"
               GridPane.halignment="CENTER">
    </TextField>

    <Text fx:id="text" GridPane.rowIndex="2" GridPane.columnIndex="2" GridPane.halignment="CENTER">
    </Text>

</GridPane>
